***************************************
* Decompresse le fichier XMP dans
* la mémoire pointee par U
***************************************
decomp pshs   d,u,x,y,dp
       setdp  *<-8
       ldb    #*<-8
       tfr    b,dp

       ldu    #biba
 
*       jsr    d7read
*       stb    <bitbuf
       clrb
       stb    <bitbuf
nxt    clra
       pshs   a,b
       bitb   #$0f
       bne    skp
       ldx    #1
skp    ldb    #4
       jsr    <getbits
       stb    ,u+
       comb
roll   rol    ,s
       rola
       incb
       bmi    roll
       ldb    ,s
       stx    ,u++
       leax   d,x
       puls   a,b
       incb
       cmpb   #52
       bne    nxt

***************************************
* decompression
***************************************
go     ldu    7,s
       stu    <STARTu
       stu    <STARTx
       leau   8000,u
       stu    <STOPx
       leau   39,u
mloop  ldb    #1
       jsr    <getbits
       bne    cpy
       stb    <idx
       fcb    $8c
rbl    inc    <idx
       incb
       jsr    <getbits
       beq    rbl

       VAR1   ldb,#0,idx
       cmpb   #$10
       beq    fin
       blo    coffs
       decb
       jsr    <getbits
***************************************
* Copy litteral
***************************************
cpy    tfr    d,y
cpyl   jsr    d7read
       jsr    <dec_u
       sta    ,u
       leay   -1,y
       bne    cpyl
       bra    mloop
fin    puls   d,u,x,y,dp,pc
***************************************
* Compte length
***************************************
coffs  jsr    <cook
       pshs   d
       ldx    #tab1
       cmpd   #$03
       bhs    scof
       abx
scof   jsr    <getbix
       addb   3,x
       jsr    <cook
       std    <offs
       puls   y

***************************************
* Copy non litteral
***************************************
cpy1   jsr    <dec_u
       leax   ,u
       VAR2   ldd,#0,offs
***************************************
* X=X+D en mode colonne
***************************************
       REPEAT
       leax   1,x
       subd   #200
       WHILE  hs
       leax   -1,x
       addd   #200
       lda    #40
       mul
       leax   d,x
       VAR2   cmpx,#0,STOPx
       blo    cpy2
       leax   1-8000,x
cpy2   lda    ,x
       sta    ,u
       leay   -1,y
       beq    mloop
       jsr    <dec_u
       jsr    <dec_x
       bra    cpy2
***************************************
* getbits  : get 0 to 16 bits from 
*            input stream
* Input    : B = bit count, U points 
*            to input buffer
* Output   : D = bits
* Modifies : D.
***************************************
getbix ldb    ,x
getbits 
       clr    ,-s
       clr    ,-s
       VAR1   lda,#0,bitbuf
       bra    get3
get1   jsr    d7read
get2   rora
       beq    get1
       rol    1,s
       rol    ,s
get3   decb
       bpl    get2
       sta    bitbuf
       ldd    ,s++
       ifne  DBGEXO
       jsr   get4
       endc
       rts
***************************************
* U=U-1 en mode colonne
***************************************
dec_u  leau   -40,u
       VAR2   cmpu,#0,STARTu
       bhs    dec_u1
       leau   8000-1,u
dec_u1 rts
***************************************
* X=X-1 en mode colonne
***************************************
dec_x  leax   -40,x
       VAR2   cmpx,#0,STARTx
       bhs    dec_x1
       leax   8000-1,x
dec_x1 rts
***************************************
* cook     : computes base[index] + readbits(&in, bits[index])
* Input    : B = index
* Output   : D = base[index] + readbits(&in, bits[index])
* Modifies : D,X.
***************************************
cook   ldx    #biba
       abx
       aslb
       abx
       jsr    <getbix
       addd   1,x
       rts
       setdp  0