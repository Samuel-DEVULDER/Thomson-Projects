       REPEAT
       ldb    ,x+
       jsr    ,u
       WHILE  ne
       rts
putx   sta    ,-s
       lsra
       lsra
       lsra
       lsra
       bsr    hex
       lda    #15
       anda   ,s+
hex    adda   #$90
       daa
       adca   #$40
       daa
       tfr    a,b
       jmp    ,u
