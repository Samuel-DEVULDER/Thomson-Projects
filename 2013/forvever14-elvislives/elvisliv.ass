***************************************
* Compo pour la ForEver Party 14
* Theme: Elvis Lives!
*
* Idee: slide show
* Categorie: demo
* Auteur: Samuel Devulder, Mars 2013
***************************************
	
       org    $9700
       
DBGD7  set    0
DBGEXO set    0

***************************************
* boucle:
*      REPEAT
*      ....
*      WHILE  condition
***************************************
REPEAT macro
loop   set    *
       endm
WHILE  macro
       b\0    loop
       endm
	
***************************************
* variable dans code auto-modifiable
*
*      VAR1   opcode,val,label ;8 bits
*      VAR2   opcode,val,label ;16 bits
***************************************
VAR1   macro
       \0     \1
\2     set    *-1
       endm
VAR2   macro
       \0     \1
\2     set    *-2
       endm

TIMEPT equ    $6027
STATUS equ    $6019

***************************************
* Alignement sur une page
***************************************
DPALGN macro
ALIGNX set    *-ALIGNX
       ifne    \0
       org    ((\0+255)<-8<8)+(*-\0)
       else
       org    (*+255)<-8<8
       endc
ALIGNX set    *-ALIGNX
       endm
ALIGNX set    0
       
       
INI         
ini    leas   *-1,pcr
       jsr    initmr
       jsr    intro
lp     jsr    alldrv
       bra    lp
**************************************
* Scan tous les lecteur et appelle
* allcat
**************************************
       setdp  $60
alldrv pshs   dp,d
       ldd    #$60
       tfr    b,dp
       REPEAT
       sta    <DKDRV
       clr    <DKFAT+1
       clr    <DKCAT+1
       ldb    #$10     ; et pas 10
       stb    <DKOPC
       jsr    DKCOM       
       ldb    #1
       stb    <DKOPC
       jsr    DKCOM
       bcs    nxtdrv 
       clr    <DKFAT+1
       clr    <DKCAT+1
       ldb    #$10
       stb    <DKOPC
       jsr    DKCOM       
       bsr    allcat
nxtdrv inca
       cmpa   #4
       WHILE  ne
       puls   dp,d,pc
***************************************
* Appelle "affiche" sur tous les
* fichiers du catalogue du disk
* courant.
***************************************
allcat pshs   d,x
       lda    #3
       REPEAT
       sta    <DKSEC
       ldx    #20
       stx    <DKTRK
       ldx    #iocat
       stx    <DKBUF
       ldb    #2
       stb    <DKOPC
       jsr    DKCOM
       bcs    endcat
allfil ldb    ,x
       beq    nxtfil
       cmpb   #-1
       beq    endcat
       ldb    8,x
       andb   #255-32  ; toupper
       cmpb   #$58     ; X
       bne    nxtfil
       ldb    9,x
       andb   #255-32  ; toupper
       cmpb   #$4D     ; M
       bne    nxtfil
       ldb    10,x
       andb   #255-32  ; toupper
       cmpb   #$50     ; P
       bne    nxtfil
CALL   pshs   a
       clra
       clrb
       std    timer   ; timer=0
       jsr    affiche

* attente
wait   jsr    $E806
       bcc    notkbd
       cmpb   #3
       bne    notbrk
       jmp    [$FFFE]
notbrk cmpb   #32
       beq    timout 
notkbd ldd    timer
       cmpd   #150  ; 15 secs
       blo    wait
timout puls   a
nxtfil leax   32,x
       cmpx   #iocat+256
       bne    allfil
       inca
       cmpa   #17
       WHILE  NE
endcat puls   d,x,pc

**************************************
* interruption timer
TCR    equ    $E7C5  ; reg cont timer
TMSB   equ    $E7C6  ; compteur timer
initmr ldd    #tmrint
       std    TIMEPT
       lda    STATUS
       ora    #32
       sta    STATUS
       ldd    #12499   ; init timer
       std    TMSB
       lda    #$46
       sta    TCR
       andcc  #255-$50
       rts
tmrint ldd    timer
       addd   #1
       std    timer
       jmp    $E830
timer  fdb    0       
       setdp  0
       
       includ INTRO
       includ DISK
       includ EXO
