***************************************
* fait apparaitre progressivement
* l'image point<E9>e par U dans la ram
* video
***************************************
appear lda   #63
       REPEAT
       bsr    dith
       bsr    disp
       deca
       WHILE  ge
       pshs   x,b    ; pause
       ldb    #4
       ldx    #0
       REPEAT
       leax   -1,x
       WHILE  ne
       decb
       WHILE  ne
       puls   x,b
       lda    #63
       REPEAT
       bsr    dith
       bsr    disp
       deca
       WHILE  ge
       rts

disp   pshs   d,x,y,u
       ldb    #7
       subb   dith3a+1
       ldx    #mask
       abx
       lda    #40
       mul
       leau   d,u
       adda   #$40
       tfr    d,y
       lda    ,x
       sta    disp5+3
       sta    disp5+5
       leax   40,y
       stx    disp6+1
       leax   ,y
disp5  pulu   d
       anda   #0
       andb   #0
       std    ,x++
disp6  cmpx   #0
       bne    disp5
       leau   40*7,u
       leax   40*8,x
       stx    disp6+1
       leax   -40,x
       cmpx   #$5F40
       bls    disp5
       puls   d,x,y,u,pc

mask   fcb    0,0,0,0,0,0,0,0

dith   pshs   d,x,u
       ldx    #dith3a+1
       ldu    #mask
       clrb
       lsla
       anda   #$AA
       eora   ,s
       lsra
       rolb
       clr    ,x
       lsra
       rol    ,x
       lsra
       rolb
       lsra
       rol    ,x
       lsra
       rolb
       lsra
       rol    ,x
       clr    4,x
       coma
dith2  rol    4,x
       decb
       bge    dith2
       ldb    #7
dith3  lda    ,u
dith3a cmpb   #00
       bne    dith4
       eora   #1
dith4  sta    ,u+
       decb
       bge    dith3
       puls   d,x,u,pc       
***************************************
* Affiche le fichier pointe par X
***************************************
affiche
       pshs   d,x,y,u
       
       jsr    d7open
       
       ldu    #RAMA
       jsr    decomp
       ldu    #RAMB
       jsr    decomp
   
       lda    $E7C3
       ora    #1
       sta    $E7C3
   
       ldx    #$0000
       REPEAT
       bsr    cpyline
       leax   8*40,x
       cmpx   #$1F40
       WHILE  lo
       ldy    #1000
       leay   -1,y
       bne    *-2
       leax   -(200-1)*40,x
       cmpx   #8*40
       WHILE  ne
       
       puls   d,x,y,u,pc

cpyline
       pshs   dp,d,x,y,u,cc
       orcc   #$50       
       setdp  cpylin<-8
       ldb    #cpylin<-8
       tfr    b,dp
       leau   >RAMA,x
       leax   >$4000,x
       bsr    cpylin       
       leau   >RAMB-RAMA,u
       dec    >$E7C3
       bsr    cpylin
       inc    >$E7C3
       puls   dp,d,x,y,u,cc,pc
cpylin pshs   x,u
       sts    <BAKSP
       stx    <VIDPTR1
       
*       clrb
*       decb
*       bne   *-1

       pulu   d,x,y,s
       stu    <RAMPTR1
       VAR2   ldu,#0,VIDPTR1
       leau   8,u
       stu    <VIDPTR2
       pshu   d,x,y,s
       
       VAR2   ldu,#0,RAMPTR1
       pulu   d,x,y,s
       stu    <RAMPTR2
       VAR2   ldu,#0,VIDPTR2
       leau   8,u
       stu    <VIDPTR3
       pshu   d,x,y,s
       
       VAR2   ldu,#0,RAMPTR2
       pulu   d,x,y,s
       stu    <RAMPTR3
       VAR2   ldu,#0,VIDPTR3
       leau   8,u
       stu    <VIDPTR4
       pshu   d,x,y,s
       
       VAR2   ldu,#0,RAMPTR3
       pulu   d,x,y,s
       stu    <RAMPTR4
       VAR2   ldu,#0,VIDPTR4
       leau   8,u
       stu    <VIDPTR5
       pshu   d,x,y,s
       
       VAR2   ldu,#0,RAMPTR4
       pulu   d,x,y,s
       VAR2   ldu,#0,VIDPTR5
       leau   8,u
       pshu   d,x,y,s

       VAR2   lds,#0,BAKSP
       puls   x,u,pc 
       setdp 0
(include)DISK
